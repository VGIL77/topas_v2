{
  "training": {
    "num_epochs": 150,
    "max_steps": 60000,
    "learning_rate": 2e-5,
    "weight_decay": 1e-5,
    "label_smoothing": 0.05,
    "grad_clip": 0.5
  },

  "search": {
    "search_alg": "puct",
    "puct_nodes": 1500,
    "puct_depth": 6,
    "c_puct": 1.25,
    "root_dirichlet_alpha": 0.3,
    "root_dirichlet_eps": 0.25,
    "beam_width": 50,
    "max_dsl_depth": 12,
    "sc_star": 5
  },

  "replay": {
    "enable": true,
    "replay_cap": 100000,
    "near_miss_hamming_pct": 5.0,
    "sample_per_step": 2,
    "importance_sampling": true
  },

  "dopamine": {
    "breakthrough_threshold": 0.33,
    "nightmare_alpha": 0.08,
    "nightmare_min_interval": 200,
    "nightmare_max_interval": 1000
  },

  "relmem": {
    "relmem_reg_alpha": 1e-3,
    "relmem_reg_beta": 5e-4,
    "relmem_bind_iou": 0.25,
    "relmem_log_interval": 200,
    "relmem_bias_ramp_start": 10,
    "relmem_bias_max": 0.5
  },

  "dream": {
    "enable_dream": true,
    "dream_micro_ticks": 1,
    "dream_full_every": 10,
    "dream_full_timeout": 600,
    "dream_background": false,
    "dream_force_cpu": false,
    "dream_pretrain_epochs": 3,
    "dream_pretrain_lr": 1e-4,
    "dream_pretrain_batches": 200,
    "dream_pretrain_freeze_model": true
  },

  "selfplay": {
    "selfplay_enable": true,
    "selfplay_interval": 250,
    "selfplay_weight": 0.1,
    "selfplay_topk": 3,
    "selfplay_buffer_size": 200
  },

  "monologue": {
    "monologue_interval": 200,
    "monologue_min_traces": 6,
    "monologue_consistency_target": 0.85,
    "monologue_selfplay_bonus": 0.05
  },

  "curriculum": {
    "start_easy_epochs": 5,
    "ramp_difficulty_epochs": 25,
    "eval_interval_epochs": 1
  },

  "eval": {
    "eval_interval": 5,
    "dataset": "arc2"
  }
}